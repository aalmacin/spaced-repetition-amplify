{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "types": ["node"]
  },
  "paths": {
    "@spaced-repetition/*": ["src/app/*"],
    "@spaced-repetition/types": ["src/app/types/*"],
    "@spaced-repetition/amplify/*": ["app/amplify/*"],
    "@spaced-repetition/auth/*": ["app/auth/*"],
    "@spaced-repetition/landing-pages/*": ["app/landing-pages/*"],
    "@spaced-repetition/main/*": ["app/main/*"],
    "@spaced-repetition/shared/*": ["src/app/shared/*"]
  },
  "exclude": ["test.ts", "**/*.spec.ts"]
}
